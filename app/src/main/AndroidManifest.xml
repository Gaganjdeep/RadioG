<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.ggn.radioG"
    android:versionCode="29"
    android:versionName="2.1.3 (Moonage Daydream)">

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="com.android.launcher.permission.UNINSTALL_SHORTCUT" />

    <application
        android:allowBackup="true"
        android:supportsRtl="true"
        android:fullBackupContent="@xml/backupscheme"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/TransistorAppTheme">

        <!-- MEDIA BUTTON RECEIVER -->
        <receiver android:name="android.support.v4.media.session.MediaButtonReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

        <!-- MAIN ACTIVITY -->
        <activity
            android:name="org.ggn.radioG.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout">

            <!-- Launcher -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- MIME Type -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="http"/>
                <data android:scheme="https" />
                <data android:scheme="file" />
                <data android:mimeType="audio/x-mpegurl" />
                <data android:mimeType="audio/x-scpls" />
                <data android:mimeType="application/x-mpegurl" />
                <data android:mimeType="audio/mpegurl" />
            </intent-filter>

            <!-- File extensions -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="http"/>
                <data android:scheme="https" />
                <data android:scheme="file" />
                <data android:host="*" />
                <data android:pathPattern=".*\\.m3u" />
                <data android:pathPattern=".*\\.m3u8" />
                <data android:pathPattern=".*\\.pls" />
            </intent-filter>

        </activity>


        <!-- INFOSHEET ACTIVITY -->
        <activity
            android:name="org.ggn.radioG.InfosheetActivity"
            android:label="@string/title_activity_infosheet"
            android:parentActivityName="org.ggn.radioG.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout">


        <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.ggn.radioG.MainActivity" />

        </activity>


        <!-- PLAYER ACTIVITY -->
        <activity
            android:name="org.ggn.radioG.PlayerActivity"
            android:label="@string/title_activity_player"
            android:parentActivityName="org.ggn.radioG.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.ggn.radioG.MainActivity" />

        </activity>


        <!-- PLAYER SERVICE -->
        <service
            android:name="org.ggn.radioG.PlayerService"
            android:exported="false">
            <intent-filter>
                <action android:name="android.media.browse.MediaBrowserService" />
            </intent-filter>
            <intent-filter>
                <action android:name="org.y20k.transistor.action.PLAY" />
                <action android:name="org.y20k.transistor.action.STOP" />
                <action android:name="org.y20k.transistor.action.DISMISS" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </service>

        <!-- SLEEP TIMER SERVICE -->
        <service
            android:name="org.ggn.radioG.helpers.SleepTimerService">
        </service>

    </application>

</manifest>